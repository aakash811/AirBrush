<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="relative">
      <div class="container position-relative">
        <div class="row position-relative">
          <!-- Decorative Image Grid -->
          <div class="col-12 overflow-hidden parallax-section">
            <div
              class="d-flex flex-wrap align-items-center justify-content-evenly image-section"
              style=""
            >
              <div class="image-grid">
                <div class="image-container">
                  <img
                    src="../images/hero-images/1.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
                <div class="image-container">
                  <img
                    src="../images/hero-images/2.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
                <div class="image-container">
                  <img
                    src="../images/hero-images/3.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
              </div>
              <div class="image-grid">
                <div class="image-container">
                  <img
                    src="../images/hero-images/4.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
                <div class="image-container">
                  <img
                    src="../images/hero-images/5.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
                <div class="image-container">
                  <img
                    src="../images/hero-images/6.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
              </div>
              <div class="image-grid img-grid-3">
                <div class="image-container">
                  <img
                    src="../images/hero-images/7.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
                <div class="image-container">
                  <img
                    src="../images/hero-images/8.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
                <div class="image-container">
                  <img
                    src="../images/hero-images/9.png"
                    alt=""
                    class="img-fluid rounded shadow"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => { const
      parallaxContainers = document.querySelectorAll(".image-grid"); const speed
      = [0.34, -0.13, 0.25]; const handleParallax = () => { const scrollY =
      window.scrollY; parallaxContainers.forEach((container, index) => {
      container.style.transform = `translateY(${scrollY * speed[index]}px)`; });
      }; window.addEventListener("scroll", handleParallax); });

    </script>
  </body>
</html>